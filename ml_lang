case $(egrep -o '^[^: ]+' < "$1") in

        "only-de"|only-en|content-sync)
                echo alles oki
                exit
                ;;

        knw|test)
                exit
                echo alles oki
                ;;

        *)
                echo "Nein, nochmal - Sprachkram fehlt."
                echo D1 ist $1 und gematcht wird:
                echo $(egrep -o '^[^: ]+' < "$1")
                exit 1
                ;;
esac
